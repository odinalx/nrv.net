<div class="page">
  <h1>{{title}}</h1>
  
  <div class="soiree-details">
    <h2>{{soiree.nom}}</h2>
    
    <div class="soiree-info">
      {{#if soiree.description}}
        <p><strong>Description :</strong> {{soiree.description}}</p>
      {{/if}}
      
      {{#if soiree.tarif_normal}}
        <p><strong>Tarif normal :</strong> {{soiree.tarif_normal}}€</p>
      {{/if}}
      
      {{#if soiree.tarif_reduit}}
        <p><strong>Tarif réduit :</strong> {{soiree.tarif_reduit}}€</p>
      {{/if}}
      
      {{#if soiree.date}}
        <p><strong>Date :</strong> {{formatDate soiree.date}}</p>
      {{/if}}
      
      {{#if soiree.horaire_debut}}
        <p><strong>Heure de début :</strong> {{formatTime soiree.horaire_debut}}</p>
      {{/if}}
      
      {{#if soiree.theme}}
        <p><strong>Thème :</strong> {{soiree.theme}}</p>
      {{/if}}
    </div>

    {{#if soiree.spectacles.length}}
      <div class="spectacles-grid">
        {{#each soiree.spectacles}}
            <div class="spectacle-card">
              <h3>{{titre}}</h3>
              {{#if description}}
                <p><strong>Description :</strong> {{description}}</p>
              {{/if}}
              {{#if style}}
                <p><strong>Style :</strong> {{style}}</p>
              {{/if}}
              {{#if horaire_prev}}
                <p><strong>Horaire :</strong> {{formatTime horaire_prev}}</p>
              {{/if}}
            </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>